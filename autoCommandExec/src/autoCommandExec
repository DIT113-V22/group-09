package com.company;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) throws FileNotFoundException {
        Scanner scan = new Scanner(new File("C:\\Users\\volts\\Downloads\\Java ACE\\commands.csv"));
        scan.useDelimiter(",");
        //skip the header
        scan.nextLine();

        ArrayList commands = new ArrayList();

        int counter = 0;
        int numofCommands = 0;

        while (scan.hasNext()) {
            String temp = scan.next();
            temp = temp.trim();
            commands.add(temp);
            counter++;

            if (counter == 2) {
                counter = 0;
                numofCommands++;

                //mqtt command, set of 3 elements
            }

        }
        scan.close();
        System.out.println(numofCommands);
        System.out.println(commands);
    }
}